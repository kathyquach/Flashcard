<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlue"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/presidentQ"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="Who is the 44th President of the\nUnited States?"
        android:background="@drawable/question_background"
        android:textColor="@color/black"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/presidentA"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="Barack Obama"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:background="@drawable/answer_background"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/answer_1"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:text="Bill Clinton"
        android:layout_below="@+id/presidentQ"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:background="@color/yellow"
        android:textColor="@color/black"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/answer_2"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:text="Barack Obama"
        android:layout_below="@+id/answer_1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:background="@color/yellow"
        android:textColor="@color/black"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/answer_3"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:text="George H. W. Bush"
        android:layout_below="@+id/answer_2"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:background="@color/yellow"
        android:textColor="@color/black"
        android:textSize="36sp" />

